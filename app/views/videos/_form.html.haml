= form_for(@video) do |f|
  - if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :artist
    = f.text_field :artist
  .field
    = f.label :song
    = f.text_field :song
  .field
    = f.label :suggested_by
    = f.text_field :suggested_by
  .actions
    = f.submit value: 'Add Suggestion', class: 'btn btn-primary'
    = link_to 'Back', root_path, :class => 'btn'